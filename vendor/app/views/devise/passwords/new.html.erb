<div class="ui-corner-all sign_in">
  <h2 class="ui-widget-header ui-corner-top">Forgot your password?</h2>
  <div class="ui-widget-content ui-corner-bottom">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'align' }) do |f| %>
      <%= devise_error_messages! %>
      
      <fieldset class="align">
        <%= f.label :email, :class => 'align' %>: <%= f.email_field :email, :class => 'align' %><br />
      </fieldset>
      <fieldset class="align form_controls">
        <%= f.submit "Send me reset password instructions" %><br />
        <%= render :partial => "devise/shared/links" %>
      </fieldset>
    <% end %>
  </div>
</div>