<div class="ui-corner-all sign_in">
  <h2 class="ui-widget-header ui-corner-top">Update Profile</h2>
  <div class="ui-widget-content ui-corner-bottom">
    <%= form_for(@user, :html => { :id => "edit_user", :class => 'align' }) do |f| %>
      <fieldset class="align">
        <%= f.label :first_name, :class => 'align' %>: <%= f.text_field :first_name, :class => 'align required' %><br />
        <%= f.label :last_name, :class => 'align' %>: <%= f.text_field :last_name, :class => 'align required' %><br />
        <%= f.label :email, :class => 'align' %>: <%= f.email_field :email, :class => 'align required email' %><br />
      </fieldset>
      <fieldset class="align form_controls">
        <%= f.submit "Update Profile", :class => 'sign_in_button' %><br />
      </fieldset>
    <% end %>
  </div>
</div>

<% content_for :head do %>
<script type="text/javascript">
  $(function() {    
    // Set up custom rule for password matching
    $('#edit_user').validate();
  });
</script>
<% end %>