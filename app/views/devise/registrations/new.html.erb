<div class="ui-corner-all sign_in">
  <h2 class="ui-widget-header ui-corner-top">Sign up</h2>
  <div class="ui-widget-content ui-corner-bottom">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'align' }) do |f| %>
      <%= devise_error_messages! %>
      
      <fieldset class="align">
        <%= f.label :first_name, :class => 'align' %>: <%= f.text_field :first_name, :class => 'align' %><br />
        <%= f.label :last_name, :class => 'align' %>: <%= f.text_field :last_name, :class => 'align' %><br />
        <%= f.label :email, :class => 'align' %>: <%= f.email_field :email, :class => 'align' %><br />
      </fieldset>
      <fieldset class="align">
        <%= f.label :password, :class => 'align' %>: <%= f.password_field :password, :class => 'align' %><br />
        <%= f.label :password_confirmation, :class => 'align' %>: <%= f.password_field :password_confirmation, :class => 'align' %><br />
      </fieldset>
      <fieldset class="align form_controls">
        <%= f.submit "Sign up", :class => 'sign_in_button' %><br />
        <div class="sign_in_help_links">
          <%= render :partial => "devise/shared/links" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

