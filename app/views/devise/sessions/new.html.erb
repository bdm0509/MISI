<div class="ui-corner-all sign_in">
  <h2 class="ui-widget-header ui-corner-top">Sign In to MISI</h2>
  <div class="ui-widget-content ui-corner-bottom">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'align' }) do |f| %>
      <fieldset class="align">
        <%= f.label :email, :class => 'align' %>:<%= f.email_field :email, :class => 'align' %><br />
        <%= f.label :password, :class => 'align' %>:<%= f.password_field :password, :class => 'align' %><br />
        <% if devise_mapping.rememberable? -%>
          <div class="center">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %><br />
          </div>
        <% end -%>
      </fieldset>
      <fieldset class="align form_controls">
        <%= f.submit "Sign in", :class => 'sign_in_button' %><br />
        <div class="sign_in_help_links">
          <%= render :partial => "devise/shared/links" %>
        </div>
      </fieldset>
      <fieldset class="align">
        <p class="warning">Unauthorized use of this website or misuse of
        the information contained herein is strictly prohibited and will result in
        the pursuing of legal action against the unauthorized user to the fullest
        extent of the law.</p>
      </fieldset>
    <% end %>
  </div>
</div>