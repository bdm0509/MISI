<%= form_for(@assured, :html => { :class => "align validate_me" } ) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
	
  <fieldset class="align">
    <%= f.label :title, :class => "align required" %>: <%= f.text_field :title, :class => "align required", :size => 50 %><br />
    <%= f.label :street, :class => "align required" %>: <%= f.text_field :street, :class => "align required", :size => 50 %><br />
    <%= f.label :city, :class => "align required" %>: <%= f.text_field :city, :class => "align required", :size => 50 %><br />
    <%= f.label :state, :class => "align select" %>: 
    <%= f.select :state, options_for_select(ApplicationHelper::US_STATES,  @assured.state), class: "align" %>
    
    <br />
    <%= f.label :zip, :class => "align required" %>: <%= f.text_field :zip, :class => "align required", :size => 50 %>
  </fieldset>
  <fieldset class="align">
    <%= f.label :contact, :class => "align required" %>: <%= f.text_field :contact, :class => "align required", :size => 50 %><br />
    <%= f.label :phone, :class => "align" %>: <%= f.text_field :phone, :class => "align required", :size => 50 %>
  </fieldset>
  <fieldset class="align">
    <%= f.label :fee, :class => "align required" %>: $<%= f.text_field :fee, :class => "align required number", :size => 10 %><br />
  </fieldset>
  <fieldset class="align form_controls">
    <input type="reset" name="Reset Values" />
    <%= f.submit %>
  </fieldset>
<% end %>