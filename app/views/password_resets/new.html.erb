<% provide(:title, "Forgot Password") %>

<div class="ui-corner-all sign_in">
  <h2 class="ui-widget-header ui-corner-top">Reset My Password</h2>
  <div class="ui-widget-content ui-corner-bottom">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
    
      <fieldset class="align">
        <%= f.label :email, :class => 'align' %>: <%= f.email_field :email, class: 'align', size: 50 %>
      </fieldset>

      <fieldset class="align form_controls">
        <%= f.submit "Reset My Password", :class => 'sign_in_button' %><br />
      </fieldset>
    <% end %>
  </div>
</div>