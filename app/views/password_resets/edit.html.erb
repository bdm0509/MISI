<% provide(:title, "Reset Password") %>

<div class="ui-corner-all sign_in">
  <h2 class="ui-widget-header ui-corner-top">Reset My Password</h2>
  <div class="ui-widget-content ui-corner-bottom">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= hidden_field_tag :email, @user.email %>
    
      <fieldset class="align">
        <%= f.label :password, :class => 'align' %>: <%= f.password_field :password, class: 'align' %><br />
        <%= f.label :password_confirmation, "Confirm Password", :class => 'align' %>: 
        <%= f.password_field :password_confirmation, class: 'align' %>
      </fieldset>

      <fieldset class="align form_controls">
        <%= f.submit "Update My Password", :class => 'sign_in_button' %><br />
      </fieldset>
    <% end %>
  </div>
</div>