<!DOCTYPE html>
<html>
<head>
  <title>MISI | <%= @title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= render 'layouts/javascripts' %>
  <%= yield :head %>
</head>

<body>
  <%= render 'layouts/header' %>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>">
        <% if value.kind_of?(Array)  %>
          <% value.each do |val| %>
            <%= val %><br />
          <% end %>
        <% else %>
          <%= value %>
        <% end %>
      </div>
    <% end %>

    <div id="content">
      <%= yield %>
    </div> <!-- #content -->
  <%= render 'layouts/footer' %>
  
  <div id="information-dialog" title="MISI Notification">
    <p id="information_message"></p>
  </div>
  
  <div id="error-dialog" title="MISI Error">
    <p id="error_message"></p>
  </div>
  
  <%= yield :javascript %>
</body>
</html>