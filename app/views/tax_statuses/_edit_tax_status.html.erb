<%= form_for(@tax_status, :html => { :class => "align validate_me" } ) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
	
  <fieldset class="align">
    <%= f.label :description, "Status", :class => "align required" %>: <%= f.text_field :description, :class => "align required", :size => 40 %><br />
  </fieldset>
  <fieldset class="align form_controls">
    <input type="reset" name="Reset Values" />
    <%= f.submit %>
  </fieldset>
<% end %>